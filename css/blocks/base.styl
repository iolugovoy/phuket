	height 100%
	width 100%
	min-width 320px
	padding 0px
	margin 0px
	position relative
	&.scroll-locked
		overflow hidden
		body
			overflow hidden
body
	height 100%
	width 100%
	padding 0px
	margin 0px
	set('font-size', 14px 16px n n 18px n)
	set('line-height', 1.35em 1.37em n n 1.38em n)
	color $baseFontColor
	min-width 320px
	position relative
