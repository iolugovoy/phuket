.global-overlay
	position fixed
	left 0px
	right 0px
	top 0px
	bottom 0px
	width 100%
	height 100%
	z-index 1999
	display none
	background-color rgba(#000,0.5)
	
p, ul, ol, table
	margin 0px
	padding 0
	color $baseFontColor
	font-weight 300

li
	margin 0

a
	text-decoration none
	display inline
	color $baseLinkColor
	// border-bottom 1px solid  rgba($baseLinkColor, 0.5)
	&:hover, &:focus
		color lighten($baseLinkColor, 20%)
		text-decoration none
		// border-bottom-color transparent
.a
	aReset()
	&:hover, &:focus
		color lighten($baseFontColor, 20%)

h1, h2, h3, h4, h5, h6, .title
	color $baseFontColor
	line-height 1em
	margin-top 0
	margin-bottom 0.8em
	font-weight 400
h1, .title
	font-size 24px
	margin-top 0.75em
	+above(sm)
		margin-top 0.3em
		font-size 36px
	+above(md)
		margin-top 0.2em
		font-size 48px
	+above(xl)
		font-size 64px
h2
	font-size 20px
	+above(sm)
		font-size 24px
	+above(md)
		font-size 30px
	+above(xl)
		font-size 36px
h3
	font-size 18px
	+above(sm)
		font-size 20px
	+above(md)
		font-size 24px
	+above(xl)
		font-size 30px
		
h4, h5, h6
	font-size 16px
	+above(sm)
		font-size 18px
	+above(md)
		font-size 20px
	+above(xl)
		font-size 24px
	
.rouble
	font-family $ptr
.hidden
	display none !important
.img
	display block
	max-width 100%
	width auto !important	
	
.table
	overflow auto
	margin-y 15px
	+above(lg)
		margin-y 20px
	+above(xl)
		margin-y 25px
	&>table
		width 100%
		margin 0
	&__active
		background-color #dddddd
table
	border-collapse collapse

.touchevents
	.link, .overlay
		cursor pointer !important
			
.clearfix
	clearfix()


button
	background transparent
	border none
	
.rubl
	font-family $ptr
	font-weight bold


h1, h2, h3
	font-weight bold
	font-family 'Gotham Pro'
	
