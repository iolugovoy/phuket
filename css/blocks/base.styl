	font-zie 14px
	font-family 'Roboto'
	
a
	color #5D5D5D

ul
	margin-left 0
	list-style-type none
	
button.btn
	font-size 13px
	font-weight bold



.main
	max-width 100vw
	overflow hidden
	>section, >.footer
		padding-x 14px
		+above(sm)
			padding-x 25px
		+above(md)
			padding-x 30px
		+above(lg)
			padding-left 8.3%
	>section 
		set('margin-bottom', 50px n 70px n 100px)

	

.icon-hotel, .icon-mobile, .icon-wallet
	fill: url('#baseGradient');
	

.body
	width 100%
	display flex
	.sidebar
		height 100vh
		position fixed
	.main
		transition all .2s ease-in-out
		height 100%
		background-color #F3F3F3
		width 100%
		position relative
		+above(lg)
			margin-left 340px
			flex-grow 1
		&.min-sidebar
			margin-left 150px
			
