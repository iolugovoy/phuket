.sidebar
	display none
	z-index 100
	transition $baseTransition
	+above(lg)			
		display block
		overflow hidden
	&__inner
		height 100%
		min-height 650px
		margin-right 20px
		position relative
		+above(lg)			
			display flex
			flex-direction column
			justify-content space-between
			padding-x 28px
			padding-top 38px
			width 100%
			width 340px
			padding-bottom 30px
			z-index 100
			transition $baseTransition
			background #fff
		>div:not(:last-child)
			margin-bottom 15px
	&__form
		input
			transition $baseTransition
		button 
			transition $baseTransition
	&__menu
		color white
		ul
			margin 0
			li 
				margin 0
		a
			font-family 'Gotham Pro'
			font-size 22px
			color black
			width 145px
			display inline-block
			padding 8px 11px
			position relative
			overflow hidden
			transition $baseTransition
			&:before
				content ''
				full-fill()
				z-index -1
				background $baseGradient
				transform translateX(-101%)
				transition transform .2s ease-in-out				
			
			&:hover, &:focus
				color white
				&:before
					transform translateX(0)
	&__controls 
		display flex
		flex-wrap wrap
	&__curency
		margin-right 20px
		margin-bottom 10px
	&__links
		display flex
		flex-direction column
		margin-top auto
	&__link
		margin-y 8px
		display flex 
		align-items center
		font-size 14px
		font-family 'Gotham Pro', sans-serif
		color black
		span
			position relative
			&:after
				content ''
				position absolute
				transition $baseTransition
				bottom 2px
				left 0
				height 1px
				width 0
				color currentColor
		&:hover, &:focus
			span:after
				width 100%
		svg
			margin-right 10px
			fill currentColor
	#toggleSidebar
		position absolute
		top 0
		right -15px
		full-centered()
		background-color #000
		width 100px
		height 50px
		svg
			fill white
			transform rotateY(180deg)
			transition $baseTransition
	&__logo
		overflow hidden
		transition $baseTransition
		flex-basis 95px
		flex-shrink 0
		width 192px
	&.collapsed
		.sidebar__inner
			width 150px
			padding-top 95px
			padding-bottom 50px
			padding-x 18px
		.sidebar__logo
			width 90px
		.sidebar__menu
			margin-left -8px
			a
				font-size 16px
				width auto
		.sidebar__form
			input 
				width 0
				padding 0
			button 
				svg
					font-size 45px
		.sidebar__link
			span
				display none
			svg 
				font-size 45px
				fill url(#smallGradient)
		#toggleSidebar
			right 0
			svg
				transform rotateY(0)
				



.touchevents
	.sidebar
		overflow auto