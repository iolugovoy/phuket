.review
    padding-left 0!important
    padding-right 0!important
    position relative
    width 100%
    &__slider   
        +at(md)
            margin-top 150px
        +at(lg)
            margin-top 150px
    &__sli-list
        margin 0
        width 100%
        height 100%
    &__slide
        margin 0
        width 100%
        height 100%
        div 
            set('height', 260px 290px 430px 420px 560px 700px)
            background-position center center 
            background-size cover
            width 100%
    &__video
        position absolute
        set('top', 0 20px 45px)
        set('left', 0 15px n 8.3%)
        z-index 10
    &__pagination 
        position absolute
        right 0
        bottom 54px
        transform translateY(50%)
        z-index 12
        width 85%
        +at(xs)
            display none
        .owl-item 
            opacity 0
            transition $baseTransition
            &.active
                opacity 1
        .owl-stage-outer
            overflow visible
    &__thumb
        div 
            background-position center center
            background-size cover
            set('height', 0 120px 150px n 200px 250px )
            width 100%
            cursor pointer
    .owl-item.current
        position relative
        &:before
            content ''
            full-fill()
            border 4px solid #312783
            
    &__arrows
        position relative
        z-index 15
        display inline-flex
    *
        user-select none